# 공통 필수 설정
GCP_PROJECT_ID=your-gcp-project-id
GCP_REGION=us-central1

DEPLOY_SERVICE_ACCOUNT_EMAIL=deploy-sa@your-gcp-project-id.iam.gserviceaccount.com

# Artifact Registry
ARTIFACT_REGISTRY_REPO=apps

# 이미지 이름 (로컬 빌드시 사용되는 논리적 이름)
BACKEND_IMAGE_NAME=backend
FRONTEND_IMAGE_NAME=frontend

# 기능 토글
ENABLE_BIGQUERY=false
ENABLE_CLOUD_SQL=false
ENABLE_GCS=false
ENABLE_FIREBASE=false
ENABLE_SECRET_MANAGER=true

# 배포 토글
DEPLOY_BACKEND=true
DEPLOY_FRONTEND=true
DEPLOY_ETL_JOB=false
CONFIGURE_SECRETS=true

# BigQuery (ENABLE_BIGQUERY=true 일 때만 사용)
BIGQUERY_PROJECT_ID=
BIGQUERY_DATASET_ID=

# Cloud SQL (ENABLE_CLOUD_SQL=true 일 때만 사용)
CLOUD_SQL_INSTANCE_NAME=
CLOUD_SQL_DB_NAME=
CLOUD_SQL_USER=

# GCS (ENABLE_GCS=true 일 때만 사용)
GCS_BUCKET_NAME=
GCS_PREFIX=

# Firebase Hosting (ENABLE_FIREBASE=true 일 때만 사용)
FIREBASE_PROJECT_ID=
FIREBASE_HOSTING_SITE=

# Secret Manager prefix (선택)
SECRET_PREFIX=readaloud_


